<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <color android:color="@android:color/transparent" />
    </item>

    <item android:state_checked="true" android:state_focused="false">
        <ripple android:color="?attr/colorControlHighlight">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorControlActivated" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_checked="true" android:state_focused="true">
        <ripple android:color="?attr/colorControlHighlight">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorControlActivated" />
                    <stroke android:width="2dp" android:color="?attr/colorControlHighlight" android:dashWidth="5dp" android:dashGap="5dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple android:color="?attr/colorControlHighlight" />
    </item>
</selector>